#!/bin/bash

DRAIN_ENDPOINT=<%= p('broker.drain_endpoint') %>
CELL_GUID=<%= spec.networks.send(spec.networks.methods(false).first).ip %>

if [[ -n ${DRAIN_ENDPOINT} ]]; then
  curl ${DRAIN_ENDPOINT}/admin/cells/${CELL_GUID}/demote -XPOST >/dev/null
fi

# Drain script requires printing 0 to stdout followed by a newline
echo 0
echo

exit 0
