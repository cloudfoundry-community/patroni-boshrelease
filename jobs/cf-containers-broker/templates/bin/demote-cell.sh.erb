#!/bin/bash

<%
  broker_endpoint = nil
  if_p('broker.drain_endpoint') do |endpoint|
    broker_endpoint = endpoint
  end
  broker_endpoint ||= begin
    broker   = link("servicebroker")
    host     = broker.instances.first.address
    username = broker.p("servicebroker.username")
    password = broker.p("servicebroker.password")
    port     = broker.p("servicebroker.port")
    "http://#{username}:#{password}@#{host}:#{port}"
  end
%>
DRAIN_ENDPOINT=<%= broker_endpoint %>

<%
  require 'json'

  def discover_external_ip
    networks = spec.networks.marshal_dump
    _, network = networks.find do |_name, network_spec|
      network_spec.default
    end
    if !network
      _, network = networks.first
    end
    if !network
      raise "Could not determine IP via network spec: #{networks}"
    end
    network.ip
  end
%>
CELL_GUID=<%= discover_external_ip %>

if [[ -n ${DRAIN_ENDPOINT} ]]; then
  curl -s ${DRAIN_ENDPOINT}/admin/cells/${CELL_GUID}/demote --connect-timeout 60 -XPOST >/dev/null || true
fi

# Drain script requires printing 0 to stdout followed by a newline
echo 0
echo

exit 0
