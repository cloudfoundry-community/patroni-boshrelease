#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/rancher-metadata/helpers/ctl_setup.sh 'rancher-metadata'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    answers=$RUN_DIR/answers.json
    if [[ ! -f ${answers} ]]; then
      echo "{}" >> ${answers}
    fi

    # USAGE: rancher-metadata [--debug] [--listen host:port] [--log path] [--pid-file path] --answers /path/to/answers.json
    exec chpst -u ${DOCKER_USER}:${DOCKER_GROUP} rancher-metadata \
      --listen 0.0.0.0:2000 \
      --log $LOG_DIR/rancher-metadata.log \
      --pid-file $PIDFILE \
      --answers ${answers} \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: rancher-metadata_ctl {start|stop}"

    ;;

esac
exit 0
