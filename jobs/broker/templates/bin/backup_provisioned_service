#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# NOTE: this script is called by patroni-broker, not via monit as root user

LOG_DIR=/var/vcap/sys/log/broker

tee >> $LOG_DIR/broker.backup_provisioned_service.log

(
  echo "test inside paretheses"
) 2>&1 >> $LOG_DIR/broker.backup_provisioned_service.log
