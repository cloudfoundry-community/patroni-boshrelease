---
name: registrator
packages: []
templates:
  bin/ctl: bin/ctl
  bin/monit_debugger: bin/monit_debugger
  data/properties.sh.erb: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh

consumes:
- name: etcd
  type: etcd_service
  optional: true

properties:
  docker.user:
    description: User which will own the Docker services
    default: root
  docker.group:
    description: Group which will own the Docker services
    default: vcap
  registrator.backend_uri:
    description: (if not using links) protocol://host:port to consul/etcd/skydns2 for registrator updates
