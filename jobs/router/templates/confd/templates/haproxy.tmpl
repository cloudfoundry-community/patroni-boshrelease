global
	maxconn 100

defaults
	log	global
	mode	tcp
	retries 2
	timeout client 30m
	timeout connect 4s
	timeout server 30m
	timeout check 5s

{{range $index, $name := ls "/routing/allocation"}}
	{{range $member := getvs (printf "/service/%s/members/*" $name)}}
		{{$data := json $member}}
		{{if eq $data.role "master"}}
listen {{$name}}
  mode tcp
  bind *:{{(printf "/routing/allocation/%s" $name | getv)}}
  server leader {{$data.conn_address}}
		{{end}}
	{{end}}
{{end}}
listen dummy
  mode tcp
  bind *:60000
  server leader 127.0.0.1:60000
