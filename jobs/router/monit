check process service_changes_ctl
  with pidfile /var/vcap/sys/run/router/service_changes.pid
  start program "/var/vcap/jobs/router/bin/monit_debugger service_changes_ctl '/var/vcap/jobs/router/bin/service_changes_ctl start'"
  stop program "/var/vcap/jobs/router/bin/monit_debugger service_changes_ctl '/var/vcap/jobs/router/bin/service_changes_ctl stop'"
  group vcap

check process confd
  with pidfile /var/vcap/sys/run/router/confd.pid
  start program "/var/vcap/jobs/router/bin/monit_debugger router_confd_ctl '/var/vcap/jobs/router/bin/confd_ctl start'"
  stop program "/var/vcap/jobs/router/bin/monit_debugger router_confd_ctl '/var/vcap/jobs/router/bin/confd_ctl stop'"
  group vcap

check process haproxy
  with pidfile /var/vcap/sys/run/router/haproxy.pid
  start program "/var/vcap/jobs/router/bin/haproxy_ctl start"
  stop program "/var/vcap/jobs/router/bin/haproxy_ctl stop"
  group vcap
